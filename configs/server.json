{
  "debug-mode": true,
  "verification": {
    "password-change": true,
    "login-change": true,
    "user-create": true,
    "user-delete": true,
    "token-get": true
  },
  "regex": {
    "verification-code": "^[a-z0-9]{8}$",
    "invite-code": "^[a-z0-9]{1,8}$",
    "login": "^[a-z][a-z0-9_]{4,14}[a-z0-9]$",
    "password": "^[A-Za-z0-9\\d@$!%*#?&_\\-]{8,64}$",
    "token": "^[A-Za-z0-9-_]*\\.[A-Za-z0-9-_]*\\.[A-Za-z0-9-_]*$"
  },
  "security": {
    "invite-code": true,
    "password": {
      "min-iterations": 5000,
      "hash-length": 32,
      "salt-length": 16
    },
    "token": {
      "salt-length": 16
    },
    "time": {
      "max-response": 500,
      "live-time": {
        "verification-token":900,
        "token":900,
        "refresh-token": 1296000
      },
      "resend": 90
    },
    "verification": {
      "max-resend-count": 3,
      "resend-time-coefficient": 2
    }
  }
}